{% extends 'base.html.twig' %}

{% block title %}climbing area overview
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<a href="{{ path('app_createArea')}}">
			create new area
		</a>


		<table>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>rock_type</th>
				<th>location</th>
			</tr>
			{% for area in areas %}
				<tr>
					<td>{{area.id}}</td>
					<td>{{area.name}}</td>
					<td>{{area.rock_type}}</td>
					<td>{{area.location}}</td>
					<td>
						<a href="{{ path('app_viewArea', {id: area.id}) }}">view</a>
					</td>
				</tr>
			{% endfor %}
		</table>

	</div>
{% endblock %}
